{
  "verbose": true,
  "ignore": ["node_modules", ".next"],
  "watch": ["server/**/*", "server/server.ts", "next.config.js"],
  "exec": "TS_NODE_PROJECT=server/tsconfig.server.json DEBUG_MODE=1 node --inspect=0.0.0.0 --require ts-node/register --require tsconfig-paths/register server/index.ts",
  "ext": "js ts json"
}